/* 菜单 */
.m_main {
    margin-top: 130rpx;
}

.m_column {
    display: flex;
    flex-flow: wrap;
    justify-content: space-between;
}

.m_column::after {
    display: block;
    content: "";
    width: 33%;
    height: 0px;
}

.m_listitem {
    width: 30%;
    display: flex;
    flex-direction: column;
    text-align: center;
    margin-bottom: 10rpx;
    padding: 20rpx 10rpx;
    position: relative;
}

.m_listitem .iconfont {
    width: 100rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 64rpx;
    padding: 10rpx;
    background-color: #4E8DCC;
    color: white;
    font-weight: bold;
    border-radius: 10rpx;
    margin: 0 auto;
}

.m_listitem:nth-child(2n) .iconfont {
    background-color: #4EB69F;
}

.m_listitem view {
    font-size: 28rpx;
    margin-top: 20rpx;
    color: #555;
    white-space: nowrap;
    max-width: 100%;
    text-overflow: ellipsis;
    overflow: hidden;
}

.m_shade {
    width: 220rpx;
    height: 200rpx;
    background-color: rgba(250, 250, 250, 0.9);
    position: absolute;
    top: -10rpx;
    left: 15rpx;
    border-radius: 20rpx;
    box-shadow: 1rpx 1rpx 10rpx #ddd;
}

.m_column .m_listitem .m_shade .iconfont {
    width: 100%;
    height: 100%;
    background-color: transparent;
    line-height: 200rpx;
    color: #00592563;
}

