/**app.wxss**/
@import "/font/iconfont.wxss";

.fl {
    float: left;
}

.fr {
    float: right;
}


/* 公共样式 */
/* 头部 */
.wraper {
    display: flex;
    min-height: 100vh;
    flex-direction: column;
}

.header {
    width: 100%;
    background-color: teal;
    color: white;
    font-size: 40rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 3;
}

.header .apply {
    text-align: center;
    margin: 0 120rpx;
}

.header .kapply {
    margin: 0 160rpx;
}

.title {
    border-bottom: 1rpx solid #ddd;
}

.title,
.seach {
    height: 100rpx;
    line-height: 100rpx;
}

.apply .van-dropdown-menu {
    background-color: transparent;
    height: 100rpx;
}

jian .apply .van-dropdown-menu__title {
    color: white;
    font-size: 36rpx;
}

.apply .van-dropdown-item {
    top: 100rpx !important;
}

.header .newCreate,
.header .icon-jiantou2 {
    font-size: 28rpx;
    padding: 0 30rpx;
}

.header .icon-dianshi {
    font-size: 44rpx;
    padding: 0 40rpx;
}

.header .icon-jiantou2 {
    font-size: 56rpx;
}

/* 搜索 */
.seach>.iconfont {
    padding: 0 40rpx;
    font-size: 40rpx;
}

.data_list {
    height: 100%;
    margin: 0 120rpx;
    color: #333;
    position: relative;
    display: flex;
}

.seach input,
.seach textarea {
    width: 100%;
    height: 50%;
    line-height: 50%;
    border-radius: 10rpx;
    outline: none;
    border: 0;
    background-color: #F7F7F9;
    padding: 8rpx 30rpx;
    align-self: center;
    font-size: 32rpx;
}

.data_list .number {
    font-size: 32rpx;
    position: absolute;
    top: 0;
    left: 50%;
    margin-left: -40rpx;
    color: #999;
}

.number .iconfont {
    font-size: 32rpx;
    margin-right: 10rpx;
}

/* 主体 */
.main {
    background-color: #fafafa;
    margin-top: 200rpx;
    padding: 0 30rpx;
    flex: 1;
    -webkit-overflow-scrolling: touch;
}

.main input {
    position: relative;
    z-index: 1;
}

.main .list {
    margin-top: 30rpx;
    padding: 20rpx 30rpx;
    background-color: white;
    border-radius: 20rpx;
    position: relative;
}

.list view {
    display: flex;
    justify-content: space-between;
}

.list .caption {
    font-size: 32rpx;
}

.list text {
    margin-bottom: 20rpx;
    font-size: 28rpx;
}

.info {
    color: #9A9A9A;
}

.info+text {
    max-width: 420rpx;
}

.end {
    font-size: 24rpx;
    line-height: 3em;
    text-align: center;
    color: #666;
}

.no_more {
    text-align: center;
    margin-top: 50%;
    color: #666;
}

/* 详情 */
.d_header {
    height: 100rpx;
    line-height: 100rpx;
}

.header .newCreate {
    font-size: 28rpx;
}

/* card */
.card {
    margin-top: 100rpx;
    margin-bottom: 10rpx;
}

.card .van-card__thumb {
    margin: 0;
}

.card .van-card__thumb {
    width: 70px;
    max-height: 30px;
}

.card .van-card__title {
    font-size: 16px;
    line-height: 1.5em;
    margin-bottom: 5px;
}

/* 主体 */
.main_nav {
    margin-bottom: 100rpx;
    -webkit-overflow-scrolling: touch;
}

.content {
    padding: 20rpx 30rpx;
}

.c_item {
    padding: 20rpx 30rpx;
    background-color: #FAFAFA;
    border-radius: 20rpx;
    margin-bottom: 12rpx;
    min-height: 80rpx;
}

.c_item .kind {
    font-size: 28rpx;
    margin-bottom: 8rpx;
    color: #666;
}

.c_item .check {
    font-size: 32rpx;
}

.check image {
    width: 200rpx;
    height: 200rpx;
    margin-right: 10rpx;
}

.main_nav .van-sticky {
    position: sticky;
    top: 100rpx;
    left: 0;
    z-index: 3;
}

/* .van-step__title view:first-child {
    word-spacing: 10000rpx;
    margin-bottom: 10rpx;
    line-height: 1.5em;
} */

.c_item .van-cell {
    padding: 0;
    background-color: #fafafa;
    flex-flow: wrap;
    z-index: 1;
}

.c_item .van-field__body--textarea.van-field__body--ios {
    margin-top: 0;
}

/* 评论 */
.speak .van-cell {
    background-color: #FAFAFA;
    border-radius: 10rpx;
}

.main_nav button:not([size='mini']) {
    width: 50%;
}

.speak .van-dialog__button {
    text-align: center;
}

.speak_list {
    line-height: 2em;
    border-bottom: 1rpx solid #ddd;
}

/* 材料明细 */
.material {
    border-bottom: 1rpx solid rgb(245, 245, 245);
    font-size: 36rpx;
    line-height: 1.5em;
    padding: 20rpx 40rpx;
}

.material .m_item {
    display: flex;
}

.m_item {
    font-size: 28rpx;
    color: #666;
}

.m_info {
    min-width: 200rpx;
}

.m_item text:nth-child(1) {
    margin-right: 50rpx;
    min-width: 52rpx;
}

.m_item text:nth-child(2) {
    max-width: 400rpx;
}

/* 新增 */
.n_main {
    padding: 30rpx;
    background-color: #f1f1f1;
    margin-top: 100rpx;
    -webkit-overflow-scrolling: touch;
}

.main .check_item {
    border-radius: 10rpx;
    background-color: white;
    margin-bottom: 30rpx;
    overflow: hidden;
}

.main .kind {
    padding-left: 15px;
    font-size: 12px;
}

.main .kind .required {
    color: red;
}

.require {
    padding-top: 8rpx;
}

.check_item image {
    width: 194rpx;
    height: 194rpx;
    padding: 10rpx;
}

.main .van-toast {
    background-color: teal;
}

.van-cell__title {
    min-width: 500rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

/* 新增材料明细 */
.main .van-icon-records {
    color: orangered;
}

.add_detail {
    position: relative;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

.add_detail .iconfont {
    position: absolute;
    top: 0;
    right: 0;
    padding: 5px 20px 10px;
    font-size: 20px;
    color: #666;
}

.detail_title .van-cell {
    color: teal;
}

.add_title {
    position: sticky;
    top: 100rpx;
    left: 0;
    z-index: 2;
}

/* 详情-编辑 */
.footer {
    height: 100rpx;
    line-height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
    display: flex;
    justify-content: space-around;
    border-top: 1rpx solid #ddd;
    background-color: white;
    text-align: center;
    font-size: 28rpx;
    color: teal;
}

.footer view {
    padding: 0 50rpx;
}

.footer .iconfont {
    font-size: 32rpx;
}

/* 动态 */
.dynamic_state {
    margin-top: 40%;
    text-align: center;
    color: #666;
}

.apply .van-ellipsis {
    overflow: visible;
}

.card .van-tag--danger {
    background-color: #0076B8;
}

.main_nav .van-tabs__line {
    background-color: #0076B8;
}

/* 图片展示 */
.datumimgbox {
    display: flex;
    flex-flow: wrap;
}

.datumimgbox .upimgbox {
    width: 190rpx;
    height: 190rpx;
    padding: 20rpx;
    position: relative;
}

.upimgbox image {
    width: 100%;
    height: 100%;
}

.delimg {
    font-size: 44rpx;
    position: absolute;
    top: -20rpx;
    right: -2rpx;
    color: #ccc;
}

.detpic_show image {
    width: 190rpx;
    height: 190rpx;
    padding: 5rpx 10rpx;
}

/* 合同项目中的费用明细表 */
.costlist {
    margin: 20rpx 40rpx;
    background-color: #fafafa;
    border-radius: 10rpx;
    padding: 0 20rpx;
}

/* 多选框 */
van-checkbox-group {
    display: flex;
    flex-flow: wrap;
    justify-content: space-around;
}

van-checkbox {
    min-width: 35%;
    margin: 20rpx;
}

.checkkind {
    width: 100%;
    line-height: 2em;
    font-size: 14px;
    color: rgb(0, 162, 255);
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid rgb(248, 248, 248);
}

.checkkind text {
    padding: 15rpx 70rpx;

}

