<block wx:for="{{treeData}}" wx:key="index">
  <view class="citem" catchtap='toggle' data-id="{{item.ID}}" data-isFolder="{{item.isFolder}}">
    <text wx:if="{{item.isFolder}}">{{item.isOpen?'[-]':'[+]'}}</text>
    <text class="cname">{{item.Name}}</text>
    <view wx:if="{{item.isFolder && item.isOpen}}" class='item'>
      <tree tree="{{item.Submenu}}"></tree>
    </view>
  </view>
</block>