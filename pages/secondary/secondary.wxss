/* pages/secondary/secondary.wxss */
.title {
  width: 100%;
  text-align: center;
  padding: 10px 0;
}

.title {
  height: 50rpx;
}

.back {
  width: 114rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #cccc;
  position: absolute;
  top: 9rpx;
  left: 25rpx;

}

.list {
  margin-top: 100rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: left;
  font-size: 30rpx;
}

.list>.box {
  width: 185rpx;
  height: 185rpx;
  /* border: 1px solid #cccc; */
  margin: 30rpx 31rpx;
  position: relative;
  text-align: center;
  padding: 20rpx 0;
  box-sizing: border-box;
  border-radius: 20rpx;

}

.list>.box .icon {
  margin: 0 auto;
  border-radius: 50%;
}

.list text {
  display: inline-block;
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.list>.box navigator {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 10;
  border-radius: 20rpx;
}

.list>.box text {
  position: absolute;
  bottom: -9rpx;
  left: 50%;
  transform: translateX(-50%);
}

.list>.box ico {
  margin-top: 10rpx;
}

.tabarcontent {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
}

.icon {
  font-size: 78rpx;
  margin: 0 auto;
}

.tan {
  text-align: center;
  line-height: 20%ï¼›
}

.list .box:nth-child(4n-3) .iconfont {
  /* background-color: rgb(255, 146, 82); */
  background-color: rgb(148, 123, 231);
}

.list .box:nth-child(4n-2) .iconfont {
  background-color: rgb(78, 182, 159);
}

.list .box:nth-child(4n-1) .iconfont {
  /* background-color: #336699; */
  background-color: #4e8dcc;
}

.icon {
  font-size: 78rpx;
  margin: 0 auto;
  width: 100rpx;
  height: 90rpx;
  background-color: #419e9e;
  color: white;
  padding: 10rpx;
  border-radius: 10rpx;
}

.list .masked {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(250, 250, 250, 0.7);
  z-index: 11;
  display: none;
  border-radius: 20rpx;
  border: 1px solid #ddd;
}

.list .show {
  display: block;
}

.list .box .masked .iconfont {
  font-size: 56rpx;
  color: rgb(146, 146, 146);
  margin-top: 55rpx;
  background-color: transparent;
}