<!-- pages/secondarys/secondarys.wxml -->
<view class="header d_header">
  <icon class="iconfont icon-jiantou2 fl" bindtap="back"></icon>
  <view class="apply">{{title}}</view>
</view>
<view class="list">
  <view class="box" wx:for="{{smalls}}" wx:key="index" data-show="{{item.control}}">
    <view class="{{'blue2 masked'+ (item.control ? '':' show')+ (item.path?'':' show')}}">
      <icon class="iconfont icon-mima"></icon>
    </view>
    <icon class="{{' icon iconfont '+ item.img + (item.control ?'':' c') }}"></icon>
    <text class="{{item.control ?'':'c'}}">{{item.nametext}}</text>
    <navigator url="{{ item.control ?(userinfo?item.path+'?menuId='+ item.menuId+'&id='+chuancan+'&title='+title:'') : '#'}}&{{userid?'userid='+userid+'&caption='+caption+'&dep='+dep+'&deptxt='+deptxt:''}}" bindtap="checkperson"></navigator>
  </view>
</view>