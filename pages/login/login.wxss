/* pages/login/login.wxss */
.wraper {
    background: linear-gradient(to bottom, #fafafa 25%, teal);
}

.logo_box {
    width: 100%;
    height: 350rpx;
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #026536;
    font-weight: bold;
    text-shadow: 6rpx 5rpx 8rpx #666;
    font-size: 32rpx;
}

.logo_box image {
    width: 150rpx;
    margin-bottom: 10rpx;
}

form {
    padding: 0 40rpx;
    opacity: 0;
    transform: translate3d(0, 100%, 0);
    animation: rise 3s cubic-bezier(0.19, 1, 0.22, 1) 1s forwards;
    position: relative;
}

@keyframes rise {
    0% {
        opacity: 0;
        transform: translate3d(0, 100%, 0);
    }

    50% {
        opacity: 1;
    }

    100% {
        opacity: 1;
        transform: translate3d(0, 0%, 0);
    }
}

.import {
    position: relative;
}

.import input {
    height: 60rpx;
    padding: 15rpx 0 15rpx 100rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    outline: none;
    border: none;
    border-radius: 40rpx;
    background-color: white;
}

.import .iconfont {
    position: absolute;
    top: 0;
    left: 35rpx;
    font-size: 36rpx;
    color: teal;
    line-height: 90rpx;
}

.forgetpwd {
    font-size: 28rpx;
    color: #666;
    text-align: right;
    padding: 10rpx 0 30rpx;
}

.btn {
    color: teal;
    font-weight: normal;
    font-size: 32rpx;
    margin-bottom: 30rpx;
    border-radius: 40rpx;
    background-color: white;
}

button:not([size='mini']) {
    width: 100%;
    min-height: 40rpx;
}

/* 注册 */
.codeinput {
    display: flex;
    justify-content: space-between;
}

.codeinput input {
    width: 30%;
    padding: 15rpx 60rpx;
}

.codeinput button {
    width: 45%;
    font-size: 28rpx;
    line-height: 2em;
    font-weight: normal;
    margin: 0;
    border-radius: 40rpx;
    height: 90rpx;
    background-color: #0f9c5b;
    color: white;
}

.returnlogin {
    display: inline-block;
    font-size: 28rpx;
    color: white;
    margin-top: -15rpx;
    position: absolute;
    bottom: -40rpx;
    right: 35rpx;
}

.import .eyes {
    position: absolute;
    top: 0;
    right: 110rpx;
    z-index: 2;
}

.eyes .iconfont {
    padding: 0 20rpx;
}

/* 密码框 */
.import .pwd {
    padding: 15rpx 80rpx 15rpx 100rpx;
}