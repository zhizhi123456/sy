/* pages/section/section.wxss */
.seachTime {
    margin: 0;
}

.seachTime input {
    margin: 0 20rpx;
}

.main .listwraper {
    padding: 50rpx 0;
    display: inline-block;
    height: 800rpx;
    overflow-y: auto;
}

.main .van-sidebar {
    width: 300rpx;
    border-right: 6rpx solid #ddd;
}

.main .van-hairline--top-bottom:after {
    border-width: 0;
}

.main .van-sidebar-item {
    font-size: 36rpx;
    border-left: 10rpx solid transparent;
    padding: 40rpx 24rpx 40rpx 16rpx;
}

.main .van-sidebar-item--selected {
    border-color: teal;
    color: teal;
    font-weight: bold;
}

.main .personlist {
    margin-left: 310rpx;
    padding-top: 50rpx;
}

.personlist view {
    line-height: 3em;
    font-size: 36rpx;
    margin-bottom: 20rpx;
    text-align: center;
    background-color: white;
    color: #333;
}

.mp_hint {
    position: absolute;
    top: 50%;
    left: 55%;
    font-size: 32rpx;
}

.p_wdot {
    position: relative;
    z-index: 0;
}

.p_dot {
    position: absolute;
    top: 0;
    left: -15rpx;
    font-size: 48rpx;
    color: teal;
}