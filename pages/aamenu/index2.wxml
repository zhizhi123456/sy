<!-- pages/aamenu/index2.wxml -->
<view class="wraper">
    <view class="header d_header">
        <icon class="iconfont icon-jiantou2 fl" bindtap="return" />
        <view class="apply">{{name}}</view>
    </view>
    <view class="m_main">
        <view class="m_column">
            <block wx:for="{{menu}}" wx:key="index">
                <view class="m_listitem">
                    <view class="m_shade" wx:if="{{!plance[tab][index]}}">
                        <icon class="iconfont icon-mima" />
                    </view>
                    <navigator url="{{plance[tab][index]}}" hover-class="none">
                        <icon wx:if="{{item.icon}}" class="iconfont {{item.icon}}"></icon>
                        <icon wx:else class="iconfont {{menuicon[tab][index]}}"></icon>
                        <view>{{item.name}}</view>
                    </navigator>
                </view>
            </block>
        </view>
    </view>
</view>