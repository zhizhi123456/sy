/* pages/contracts/contracts.wxss */


.tabarcontent {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  padding: 10rpx 0;
  border-top: 1rpx solid #ddd;
  color: #666;
  background-color: white;
  z-index: 100;
}

.tabar .iconfont {
  color: #666;
  background-color: white;
}

.tabar {
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  background-color: white;

}

.tabar>.box {
  width: 160rpx;
  height: 100rpx;
  position: relative;
  text-align: center;
}

.tabar>.box navigator {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 20;
}

.tabar>.box text {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  font-size: 28rpx;
}

.tabar text {
  display: inline-block;
  width: 100%;
}


.tabarcontent .active {
  color: #016536;
  font-weight: 600;
}

.tab {
  font-size: 48rpx;
}

.list .box:nth-child(4n-3) .iconfont {
  /* background-color: rgb(255, 146, 82); */
  background-color: rgb(148, 123, 231);
}

.list .box:nth-child(4n-2) .iconfont {
  background-color: rgb(78, 182, 159);
}

.list .box:nth-child(4n-1) .iconfont {
  /* background-color: #336699; */
  background-color: #4e8dcc;
}

.list .masked {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(250, 250, 250, 0.7);
  z-index: 11;
  display: none;
  border-radius: 20rpx;
  /* border: 1rpx solid #ddd; */
}

.list .show {
  display: block;
}

.list .box .masked .iconfont {
  font-size: 56rpx;
  color: rgb(146, 146, 146);
  margin-top: 55rpx;
  background-color: transparent;
}

/* 提示 */
.HINT {
  position: absolute;
  top: 0;
  right: 0;
}