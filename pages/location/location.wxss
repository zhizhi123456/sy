/* pages/oa/oa.wxss */
.cover-view {
    position: absolute;
    top: calc(50% - 50rpx);
    left: calc(50% - 50rpx);
}

.icon-didian {
    width: 100rpx;
    height: 100rpx;
    font-size: 64rpx;
    color: teal;
}

.operation {
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 50rpx;
    font-size: 28rpx;
    text-align: center;
    color: teal;
}

.path_box {
    width: 75%;
    height: 120rpx;
    margin: 0 auto;
    display: flex;
    flex-flow: nowrap;
    justify-content: space-between;
    /* background-color: cadetblue; */
    background-color: white;
    border-radius: 60rpx;
}

.location {
    line-height: 120rpx;
    padding: 0 40rpx;
}

.path {
    width: 160rpx;
    height: 160rpx;
    background-color: teal;
    border-radius: 50%;
    position: absolute;
    left: 50%;
    bottom: 50rpx;
    font-size: 32rpx;
    text-align: center;
    color: white;
    margin-left: -80rpx;
    /* border:15rpx solid cadetblue; */
    border: 15rpx solid white;
}

.path .iconfont {
    font-size: 56rpx;
    margin-top: 20rpx;
}

.cover-tip-wrapper {
    margin: 20rpx 30rpx 0 150rpx;
    height: 100rpx;
    background-color: rgba(250, 250, 250, 0.9);
    color: #6d6c6c;
    font-weight: bold;
    border-radius: 20rpx;
}

.tip-text {
    max-width: 70%;
    line-height: 100rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    margin: 0 auto;
    font-size: 36rpx;
}

.cover-tip-wrapper .iconfont {
    line-height: 100rpx;
    font-size: 48rpx;
    padding: 0 20rpx;
}

.return {
    width: 100rpx;
    height: 100rpx;
    background-color: rgba(250, 250, 250, 0.9);
    border-radius: 50%;
    position: absolute;
    top: 20rpx;
    left: 30rpx;
    display: flex;
    justify-content: space-around;
}

.return .iconfont {
    font-size: 64rpx;
    line-height: 100rpx;
    color: teal;
}

/* 列表 */
.placelist {
    width: 600rpx;
    color: #333;
    background-color: white;
    height: 100vh;
    position: absolute;
    top: 0;
    right: 0;
    transition: all 3s;
}

.placelist .iconfont {
    color: teal;
}

.p_shade {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.6);
    transition: all 3s;
}

.search-address-container {
    padding: 0 20rpx;
}

.input-address-wrapper {
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    position: relative;
}

.icon-map {
    height: 100rpx;
    line-height: 100rpx;
}

.input-address {
    min-width: 500rpx;
    flex: 1;
}

.delete-input {
    width: 30rpx;
    height: 30rpx;
}

.gray-text {
    font-size: 28rpx;
    color: #333;
    background-color: #fafafa;
    border-radius: 10rpx;
    padding: 10rpx 20rpx;

}

.cancel-wrapper {
    width: 80rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 20rpx;
}

.line {
    width: 100%;
    height: 1rpx;
    background-color: #e5e5e5;
    position: absolute;
    left: 0;
    bottom: 0;
}

.line-item {
    width: 92%;
    height: 1rpx;
    background-color: #e5e5e5;
    position: absolute;
    right: 0;
    bottom: 0;
}

.search-layout {
    width: 100%;
    position: relative;
}

.search-scroll {
    width: 100%;
    height: 100%;
    overflow: hidden;
    white-space: nowrap;
}

.address-item-wrapper {
    width: 100%;
    height: auto;
}

.address-item {
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-top: 10rpx;
    position: relative;
}

.address-item:active {
    background-color: #eee;
}

.item-address {
    width: 100%;
    height: 120rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.item-image {
    width: 24rpx;
    height: 24rpx;
    margin-left: 54rpx;
}

.item-detail-address {
    font-size: 28rpx;
    color: #666;
    margin-top: 10rpx;
}

.item-address-layout {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
    margin-left: 20rpx;
}

.item-title {
    font-size: 30rpx;
    color: #333;
}

.empty-layout {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.empty-icon {
    margin-top: 300rpx;
    width: 80rpx;
    height: 80rpx;
}

.empty-text {
    color: #666;
    margin-top: 30rpx;
    font-size: 30rpx;
}

.van-popup {
    width: 600rpx;
    text-overflow: ellipsis;
}

.cancel-wrapper .iconfont {
    color: #666;
    font-size: 30rpx;
}

/* 显示路线规划 */
.process {
    margin: 20rpx 30rpx 0 150rpx;
    background-color: rgba(250, 250, 250, 0.8);
    height: 200rpx;
    overflow-y: scroll;
    border-radius: 20rpx;
    font-size: 28rpx;
}

.p_text {
    padding: 10rpx 30rpx;
}

.p_hint {
    border-top: 1rpx solid white;
}