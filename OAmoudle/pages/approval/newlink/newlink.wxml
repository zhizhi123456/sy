<!-- pages/bill/newlink/newlink.wxml -->
<view class="wraper">
    <view class="header d_header" wx:if="{{materials[0].ID}}">
        <icon class="iconfont icon-jiantou2 fl" bindtap="linkreturn"></icon>
        <text class="fr newCreate" bindtap="linkconfirm">确定</text>
        <view class="apply">编辑支付审批明细</view>
    </view>
    <view class="header d_header" wx:else>
        <icon class="iconfont icon-jiantou2 fl" bindtap="return"></icon>
        <text class="fr newCreate" bindtap="confirm">确定</text>
        <view class="apply">新建支付审批明细</view>
    </view>
    <view class="main n_main">
     <van-toast id="van-toast" />
        <view class="check_item">
            <view class="kind">
                <text>序号</text>
                <text class="required">*</text>
            </view>
            <van-cell-group>
                <van-field value="{{materials[0].detailxh}}" placeholder="请输入" bind:blur="getgname" data-i='{{index}}' data-name='detailxh' />
            </van-cell-group>
        </view>
        <view class="check_item">
            <view class="kind">
                <text>支付审批明细内容</text>
                <text class="required">*</text>
            </view>
            <van-cell-group>
                <van-field value="{{materials[0].detailcontext}}" placeholder="请输入" bind:blur="getgname" data-i='{{index}}' data-name='detailcontext' />
            </van-cell-group>
        </view>
        <view class="check_item">
            <view class="kind">
                <text>金额</text>
                <text class="required">*</text>
            </view>
            <van-cell-group>
                <van-field value="{{materials[0].amount}}" placeholder="请输入" bind:blur="getgname" data-i='{{index}}'   bind:input="checknum"  data-name='amount' />
            </van-cell-group>
        </view>
    </view>
</view>