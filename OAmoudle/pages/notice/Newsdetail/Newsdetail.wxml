<!-- pages/detail/detail.wxml -->
<view wx:if="{{info}}">
    <view class="header d_header">
        <icon class="iconfont icon-jiantou2 fl" bindtap="return"></icon>
        <view class="apply">新闻详情</view>
    </view>
    <view class="main_nav">
        <view class="content">
            <view class="c_item">
                <view class="kind">公告名称</view>
                <view class="check">{{info.name}}</view>
            </view>
            <view class="c_item">
                <view class="kind">内容</view>
                <view class="check">{{info.contenttext}}</view>
            </view>
            <view class="c_item">
                <view class="kind">新闻时间</view>
                <view class="check">{{info.createtime}}</view>
            </view>
        </view>
    </view>
</view>