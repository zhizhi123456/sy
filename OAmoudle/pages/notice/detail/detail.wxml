<!-- pages/detail/detail.wxml -->
<view wx:if="{{info}}">
    <view class="header d_header">
        <icon class="iconfont icon-jiantou2 fl" bindtap="return"></icon>
        <text class="fr newCreate" bindtap="delete">删除</text>
        <view class="apply">资料详情</view>
    </view>
    <view class="card">
        <van-card title="{{info.debitnotetype}}"   />
    </view>
    <view class="main_nav">
        <van-tabs active="a">
            <van-tab title="详细资料" name="a">
                <view class="content">
                    <view class="c_item">
                        <view class="kind">公告类型</view>
                        <view class="check">{{info.type}}</view>
                    </view>
                    <view class="c_item">
                        <view class="kind">公告名称</view>
                        <view class="check">{{info.name}}</view>
                    </view>
                    <view class="c_item">
                        <view class="kind">内容</view>
                        <view class="check">{{info.contenttext}}</view>
                    </view>
                    <view class="c_item">
                        <view class="kind">是否置顶</view>
                        <view class="check">{{info.isstick}}</view>
                    </view>
                    <view class="c_item">
                        <view class="kind"> 接收部门</view>
                        <view class="check">{{info.receivedepartment}}</view>
                    </view>
                    <view class="c_item">
                        <view class="kind">是否含子部门</view>
                        <view class="check">{{info.issubdivision}}</view>
                    </view>
                    <view class="c_item">
                        <view class="kind">接收员工</view>
                        <view class="check">{{info.receivestaff}}</view>
                    </view>
                      <view class="c_item">
                        <view class="kind">文件</view>
                        <view class="check">{{info.uplodfile}}</view>
                    </view>
                   <view class="c_item">
                        <view class="kind">封面</view>
                        <view wx:if="{{info.cover}}" class="detpic_show">
                            <block wx:for="{{info.cover}}" wx:key="index">
                                <image src="{{item}}" bindtap="tap_pic" data-index="{{index}}" binderror="defaultimg" />
                            </block>
                        </view>
                    </view>
                    <view class="c_item">
                        <view class="kind">创建人</view>
                        <view class="check">{{info.createman}}</view>
                    </view>
                    <view class="c_item">
                        <view class="kind">创建时间</view>
                        <view class="check">{{info.createtime}}</view>
                    </view>
                    <view class="c_item">
                        <view class="kind">修改人</view>
                        <view class="check">{{info.updateman}}</view>
                    </view>
                    <view class="c_item">
                        <view class="kind">修改时间</view>
                        <view class="check">{{info.updatetime}}</view>
                    </view>
                    <!-- <view class="c_item">
                        <view class="kind">当前步骤名称</view>
                        <view class="check">{{info.CurStepName}}</view>
                    </view>
                    <view class="c_item">
                        <view class="kind">当前处理人</view>
                        <view class="check">{{info.CurDealer}}</view>
                    </view>
                    <view class="c_item">
                        <view class="kind">步骤是否完成</view>
                        <view class="check">{{info.IfWfComplete}}</view>
                    </view> -->
                </view>
            </van-tab>
          <!-- <van-tab title="动态" name="b">
                <van-cell title="动态({{Workstate}})" />
                <van-steps steps="{{ steps }}" active="{{ actived }}" direction="vertical" active-color="#008080" inactive-icon="stop-circle" />
            </van-tab> -->
            <!-- <van-tab title="修改记录" name="d">
                <block wx:if="{{amendant}}">
                    <van-cell title="记录({{amendant.length}})" />
                    <van-steps steps="{{ amendant }}" active="{{ active }}" direction="vertical" />
                </block>
                <view class="dynamic_state" wx:else>暂无记录</view>
            </van-tab> -->
        </van-tabs>
    </view>
    <view class="footer">
        <!-- <view bindtap="sendback" wx:if="{{info.formid}}">
            <icon class="iconfont icon-wj-thwj"></icon>
            <text>退回</text>
        </view> -->
        <view>
            <navigator open-type="redirect" url="/OAmoudle/pages/notice/new/new?id={{info.ID}}" hover-class="none">
                <icon class="iconfont icon-bianji"></icon>
                <text>编辑</text>
            </navigator>
        </view>
        <!-- <view bindtap="putin" wx:if="{{isnext}}">
            <icon class="iconfont icon-tijiao"></icon>
            <text>审核通过</text>
        </view> -->
    </view>
</view>